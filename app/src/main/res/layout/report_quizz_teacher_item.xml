<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default16_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#f2f2f2">

        <TextView
            android:id="@+id/tvReportQuizzName"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Quizz Name"
            android:textSize="22sp"
            android:layout_marginRight="@dimen/margine_right_item" />

        <TextView
            android:id="@+id/tvReportFailed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff0000"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginRight="@dimen/margine_right_item"
            android:layout_marginEnd="@dimen/margine_right_item" />

        <TextView
            android:id="@+id/tvReportSuccess"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#00ff00"
            android:layout_height="wrap_content"
            android:text="N.Success"
            android:textSize="22sp"
            android:layout_marginRight="@dimen/margine_right_item"
            android:layout_marginEnd="@dimen/margine_right_item" />

        <TextView
            android:id="@+id/tvReportNA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="N.NA"
            android:textSize="22sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>